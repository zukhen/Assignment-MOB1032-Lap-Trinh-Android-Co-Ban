<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Statusbar"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="start"
            android:background="@drawable/circle_border"
            android:src="@drawable/ic_android_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:weightSum="3">
            <ImageView
                android:id="@+id/btn_Setting"
                android:layout_width="40dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/hello_admin"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/qu_n_l_sinh_vi_n"
                android:textColor="@color/white"
                android:textSize="26sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_corner_white"
        android:orientation="vertical"
        android:paddingHorizontal="10dp" >

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
<!--hang 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_addLop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:text="@string/th_m_l_p"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_add_circle_outline_24" />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="0dp"/>
            <LinearLayout
                android:id="@+id/btn_addSinhVien"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item"
                android:orientation="horizontal"
                android:padding="20dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:paddingStart="10dp"
                    android:text="@string/th_m_sinh_vi_n"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_add_circle_outline_24" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_xemDSLop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:text="@string/xem_danh_s_ch_l_p"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_add_circle_outline_24" />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="0dp"/>
            <LinearLayout
                android:id="@+id/btn_xemDSSinhVien"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item"
                android:orientation="horizontal"
                android:padding="20dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:paddingStart="10dp"
                    android:text="@string/xem_danh_s_ch_sinh_vi_n"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_add_circle_outline_24" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>